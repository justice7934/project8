upstream auth_backend {
    server 172.16.6.53:8000;
    server 172.16.6.54:8000 backup;
}

server {
    listen 8000;
    server_name justic.store;

    root /usr/share/nginx/html;
    index index.html;

    # âœ… ë¡œê·¸ì¸ ì„±ê³µ í˜ì´ì§€
    location = /login/success {
        try_files /login_success.html =404;
    }

    # Auth API
    location /auth/ {
        proxy_pass http://auth_backend;
        proxy_set_header Host auth.justic.store;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Video API (ğŸ”¥ ëª…ì‹œì ìœ¼ë¡œ ë¶„ë¦¬)
    location /api/video/ {
        proxy_pass http://auth_backend;
        proxy_set_header Host auth.justic.store;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


    # âœ… ì •ì  íŒŒì¼
    location / {
        try_files $uri $uri/ =404;
    }
}
