global_defs {
    router_id {{ inventory_hostname }}
}

vrrp_script chk_nginx {
    script "pidof nginx"
    interval 2
    weight -100
}

vrrp_instance VI_1 {
    state {{ keepalived_state }}
    interface ens160
    virtual_router_id 51
    priority {{ keepalived_priority }}
    advert_int 1

    authentication {
        auth_type PASS
        auth_pass JUSTICVIP
    }

    virtual_ipaddress {
        172.16.6.50/24
    }

    track_script {
        chk_nginx
    }
}
